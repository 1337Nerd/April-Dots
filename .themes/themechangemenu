theme_selection() {
bgcolor=$(xrdb -query | grep -m 1 background | cut -f 2)
fgcolor=$(xrdb -query | grep -m 1 foreground | cut -f 2)
highlight=$(xrdb -query | grep -m 1 highlight | cut -f 2)
ls ~/.themes/ | dmenu -l 7 -p 'Select Theme' -nb "${bgcolor}" -nf "${fgcolor}" -sb "${highlight}" -sf "${bgcolor}" -fn 'Iosevka Term-12'
}
dash ~/.themes/$(theme_selection)
